<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<TextView
	    android:id="@+id/textViewfacecheck"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.08"
	    android:textSize="25dp"
	    android:background="@color/home"
	    android:textColor="@color/yin"
	    android:gravity="center"
	    android:text="人脸考勤" />
	
    <ImageView   
            android:layout_width="fill_parent"  
            android:layout_height="3dp"  
            android:background="@color/yellow"  
            />  
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.87" />

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/classId"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="0.91"
        android:background="@drawable/qq_edit_login"
        android:ems="10"
        android:hint="输入课程编号"
        android:singleLine="true" />

    <EditText
        android:id="@+id/classTime"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@drawable/qq_edit_login"
        android:ems="10"
        android:hint="输入第几次考勤"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

</LinearLayout>
	<Button
            android:id="@+id/butCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_button_div"
            android:text="开始考勤" />
</LinearLayout>
