<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal"
	    android:background="@drawable/background_login">
	    <Button
	        android:id="@+id/btReturn"
	        android:layout_gravity="center" 
	        android:background="@drawable/background_button_div"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="返回"
	        android:textColor="#FFFFFFFF"/>
	     <TextView
	     	android:layout_gravity="center_horizontal"
	        android:gravity="center"
	        android:id="@+id/tvLessonnameInIqClassActivity"
	        android:textSize="30sp"
	        android:textColor="#FFFFFFFF"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="人工智能"/>
	</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" >
        <TextView
            android:id="@+id/tvLessonInfo"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="课程"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/tvPublicMsg"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="公告"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvlessonForum"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="论坛"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvLessonRes"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="资源"
            android:textSize="22sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cursor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/slide" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>